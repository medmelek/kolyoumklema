<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51ffffff">

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/a"
        android:background="@drawable/a"
        android:layout_alignTop="@+id/b"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/b"
        android:id="@+id/b"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/c"
        android:id="@+id/c"
        android:layout_alignTop="@+id/d"
        android:layout_alignLeft="@+id/b"
        android:layout_alignStart="@+id/b" />

    <Button
        android:layout_width="150dp"
        android:background="@drawable/d"
        android:layout_height="150dp"
        android:id="@+id/d"
        android:layout_below="@+id/a"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Avatar ?"
        android:textColor="#cf0b8b"
        android:textSize="25dp"
        android:rotation="9"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:id="@+id/press"
        android:background="@drawable/press"
        android:rotation="-30"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>